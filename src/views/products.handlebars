<h3> Welcome, {{user.first_name}}!</h3>
<p>Role: {{user.role}}</p>
<button>
    <a href="/api/sessions/signout">Sign out</a>
</button>

<h2> PRODUCTS </h2>

{{#if products}}

{{!-- PAGES MENU --}}
<div>
    {{#if prevLink}}
    <a href={{prevLink}}> &lt; </a>
    {{/if}}

    {{#each pagesArray}}
    <a href="/products?page={{this}}{{queryString}}"> {{this}} </a>
    {{/each}}

    {{#if nextLink}}
    <a href={{nextLink}}> &gt; </a>
    {{/if}}
</div>

{{!-- PRODUCTS LIST --}}
{{#each products}}

<div>
    <h3>{{title}}</h3>
    <p> Price: {{ price }} </p>
    <p> Stock: {{ stock }} </p>
    <p> Categor√≠a: {{ category }} </p>
    <button class="add-product-btn" id="add-{{id}}"> Agregar al carrito </button>
</div>

<br>
{{/each}}

